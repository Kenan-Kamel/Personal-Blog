<div class="author">
    <h1 class="author__heading">Hi, I am Kenan.</h1>
    <p class="author__body">Web developer and CS Ph.D. Student </p>
</div>


<img src="/images/hero-image.webp" alt="person looking out through window" class="hero-image" width="981" height="528">

<section class="article">
  <h2 class="article__heading">Latest Posts</h2>
  <ul class="article-ul">

    <% data.forEach(post => { %>
    <li>
        <a href="/post/<%= post._id %>">
            <span><%= post.title %></span>
            <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
        </a>
    </li>
    <% }) %>


  </ul>
 <a href="#" class="pagination">&lt; View Older Posts</a>

</section>